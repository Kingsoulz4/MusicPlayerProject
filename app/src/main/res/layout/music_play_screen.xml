<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/gradient"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="Placeholder album image"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/arrow_down"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nowPlayingText"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:fontFamily="@font/gotham_thin"
                android:gravity="center"
                android:text="@string/now_playing"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/albumName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:text="Album"
                android:textColor="@color/white" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/menu_dots" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="478dp">

        <ImageView
            android:id="@+id/albumImage"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/random_1" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Broken Heart of Ender"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/authorName"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Peter Hont"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/songProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/songTimePassed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_bold"
                android:text="00:00"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="177dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/songTimeTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_bold"
                android:text="04:20"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/songLikeButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/heart_blank" />

            <ImageButton
                android:id="@+id/songPrevButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/player_back" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/playButton"

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="@color/white"
                app:fabCustomSize="70dp"
                app:srcCompat="@drawable/player_play" />

            <ImageButton
                android:id="@+id/songSkipButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/player_skip" />

            <ImageButton
                android:id="@+id/songMenuButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                app:srcCompat="@drawable/menu_dots" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>